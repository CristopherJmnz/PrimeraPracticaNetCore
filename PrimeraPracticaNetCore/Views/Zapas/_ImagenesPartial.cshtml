@model ModelZapasImagen

@{
    Layout = "";
    Zapatilla zapa = Model.Zapatilla;
}


<h3 class="mt-3">
    @ViewData["POSICION"] de @Model.NumeroRegistros
</h3>

<div>

    <button onclick="loadImagenes(1)" class="btn btn-primary">
        Primero
    </button>
    <button onclick="loadImagenes(@ViewData["ANTERIOR"])" class="btn btn-primary">
        Anterior
    </button>
    <button onclick="loadImagenes(@ViewData["SIGUIENTE"])" class="btn btn-primary">
        Siguiente
    </button>
    <button onclick="loadImagenes(@ViewData["ÚLTIMO"])" class="btn btn-primary">
        Último
    </button>
</div>

<div class="w-100 m-auto text-center mt-3" style="height:500px;">
    <img class="img-fluid " style="max-height:100%" src="@Model.ImagenZapa.Imagen" />
</div>